# Environment Configuration
# Copy this to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Model options (choose based on budget and needs):
# gpt-4o-mini (recommended for prototype - much cheaper, still very good)
# gpt-4o (latest GPT-4, more expensive but best quality)
# gpt-3.5-turbo (cheapest option, good for testing)
OPENAI_MODEL=gpt-4o-mini

# Server Configuration
PORT=3001
JWT_SECRET=your_jwt_secret_here

# Database Configuration
DATABASE_PATH=./ai_literacy_buddy.db

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
