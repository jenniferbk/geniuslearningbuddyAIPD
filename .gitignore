# Create .gitignore to exclude sensitive files
cat > .gitignore << 'EOF'
# Environment variables
.env
backend/.env

# Dependencies
node_modules/
backend/node_modules/
frontend/node_modules/

# Database files
backend/*.db
backend/ai_literacy_buddy.db

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Build outputs
frontend/build/
frontend/dist/

# IDE files
.vscode/
.DS_Store
*.swp
*.swo

# OS generated files
Thumbs.db
ehthumbs.db

# Temporary files
*.tmp
*.temp
EOF